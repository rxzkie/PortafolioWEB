---
import Layout from '../layouts/Layout.astro';
import Experiencia from './experiencia.astro';
---

<Layout>
  <!-- Sección "Sobre Mí" (id="inicio") -->
  <section id="inicio" class="min-h-screen flex flex-col items-center justify-center bg-blue-200 dark:bg-gray-800 text-center px-6">
    <div class="max-w-4xl">
      <h1 class="text-5xl font-bold text-gray-900 dark:text-gray-200">¡Hola, soy Renzo!</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 mt-4">
        Soy un desarrollador apasionado por la tecnología y la innovación...
      </p>
    </div>
    <a href="#experiencia" class="mt-8 inline-block bg-indigo-500 hover:bg-indigo-600 text-white text-lg font-semibold px-6 py-3 rounded-md shadow-md transition-all">
      Ver mi experiencia
    </a>
  </section>

  <!-- Sección de Experiencia (id="experiencia") -->
  <Experiencia />
</Layout>
