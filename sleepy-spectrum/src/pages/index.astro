---
import Layout from '../layouts/Layout.astro';
import Experiencia from './experiencia.astro';
---

<Layout>
  <!-- Sección "Sobre Mí" (id="inicio") -->
  <section id="inicio" class="min-h-screen flex flex-col items-center justify-center bg-green-100 dark:bg-gray-800 text-center px-6">
    <div class="max-w-4xl">
      <h1 class="text-5xl font-bold text-green-900 dark:text-green-300">¡Hola, soy Renzo!</h1>
      <p class="text-lg text-green-800 dark:text-green-400 mt-4">
        Soy un desarrollador apasionado por la tecnología y la innovación...
      </p>
    </div>

    <!-- Botón con colores naturales -->
    <a href="#experiencia" class="mt-8 inline-block bg-white text-green-800 border border-green-600 
       hover:bg-green-600 hover:text-white text-lg font-semibold px-6 py-3 rounded-md shadow-md transition-all">
      Ver mi experiencia
    </a>
  </section>

  <!-- Sección de Experiencia (id="experiencia") -->
  <Experiencia />
</Layout>
