---
import Layout from "../layouts/Layout.astro";
import SobreMi from "./experiencia.astro";
import Proyectos from "./proyectos.astro";
import Contacto from "./contacto.astro";
import { Linkedin, Github, MessageCircle } from "lucide-astro";
---

<Layout>
  <section
    id="inicio"
    class="flex flex-col items-center justify-center bg-white dark:bg-black text-center px-6 py-20"
    data-aos="fade-up"
  >
    <div class="max-w-4xl">
      <h1 class="text-5xl font-bold text-black dark:text-white animate-fade-in">
        ¡Hola, soy Renzo!
      </h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 mt-3" data-aos="fade-up" data-aos-delay="100">
        Transformo ideas en soluciones digitales reales. Desarrollo aplicaciones web modernas y apps móviles que impulsan el crecimiento de tu negocio.
      </p>
    </div>

    <div class="flex items-center gap-6 justify-center mt-6" data-aos="fade-up" data-aos-delay="200">
      <a
        href="https://www.linkedin.com/in/renzo-german-rios-abbate-041a42262/"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center w-12 h-12 bg-black dark:bg-white rounded-full transition-all duration-300 hover:scale-110"
      >
        <Linkedin class="w-6 h-6 text-white dark:text-black hover:text-blue-600 transition-colors" />
      </a>

      <a
        href="https://github.com/rxzkie"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center w-12 h-12 bg-black dark:bg-white rounded-full transition-all duration-300 hover:scale-110"
      >
        <Github class="w-6 h-6 text-white dark:text-black hover:text-gray-500 transition-colors" />
      </a>

      <a
        href="#sobre-mi"
        class="scroll-link bg-white text-black border border-green-600 hover:bg-green-600 hover:text-white dark:bg-black dark:text-white dark:border-green-500 dark:hover:bg-green-500 dark:hover:text-black text-lg font-semibold px-6 py-3 rounded-md shadow-md transition-all"
      >
        Descubre cómo puedo ayudarte
      </a>
    </div>
  </section>

  <!-- Sección Sobre Mí -->
  <SobreMi />

  <!-- Sección de Proyectos -->
  <Proyectos />

  <!-- Sección de Contacto -->
  <Contacto />

  <div id="whatsapp-float" class="fixed bottom-6 right-6 z-50" data-aos="zoom-in" data-aos-delay="500">
    <a
      href="https://api.whatsapp.com/send?phone=56983064692&text=¡Hola! Me interesa conocer más sobre tus servicios."
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center justify-center w-14 h-14 bg-green-500 hover:bg-green-600 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110"
      title="Contáctame por WhatsApp"
    >
      <MessageCircle class="w-7 h-7 text-white" />
    </a>
  </div>
</Layout>
