---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const siteUrl = "https://renzorios.netlify.app";
const siteName = "Renzo Ríos | Desarrollador Full Stack";
const siteTitle = "Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web en Chile";
const siteDescription = "Desarrollador Full Stack en Viña del Mar, Chile. Especializado en React, Next.js, Django, apps móviles con React Native y soluciones con IA. Creo páginas web modernas, e-commerce y aplicaciones a medida para impulsar tu negocio.";
const siteKeywords = "desarrollador full stack, desarrollador web chile, crear pagina web, diseño web viña del mar, react developer, next.js, django, aplicaciones móviles, react native, freelancer chile, programador web";
const siteImage = `${siteUrl}/og-image.svg`;
const authorName = "Renzo Germán Ríos Abbate";
const authorEmail = "elpampanati@gmail.com";
const authorPhone = "+56983064692";
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <meta name="keywords" content={siteKeywords} />
    <meta name="author" content={authorName} />
    <meta name="creator" content={authorName} />
    <meta name="publisher" content={authorName} />
    
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    
    <meta name="theme-color" content="#7c3aed" />
    <meta name="color-scheme" content="dark light" />
    <meta name="format-detection" content="telephone=yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Renzo Ríos" />
    
    <link rel="canonical" href={siteUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    <link rel="manifest" href="/manifest.json" />
    
    <meta name="geo.region" content="CL-VS" />
    <meta name="geo.placename" content="Viña del Mar, Chile" />
    <meta name="geo.position" content="-33.0245;-71.5518" />
    <meta name="ICBM" content="-33.0245, -71.5518" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content={siteImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Renzo Ríos - Desarrollador Full Stack" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:locale" content="es_CL" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@rxzkie" />
    <meta name="twitter:creator" content="@rxzkie" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content={siteImage} />
    <meta name="twitter:image:alt" content="Renzo Ríos - Desarrollador Full Stack" />

    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "@id": `${siteUrl}/#website`,
          "url": siteUrl,
          "name": siteName,
          "description": siteDescription,
          "inLanguage": "es-CL",
          "publisher": {
            "@id": `${siteUrl}/#person`
          },
          "potentialAction": {
            "@type": "SearchAction",
            "target": {
              "@type": "EntryPoint",
              "urlTemplate": `${siteUrl}/?s={search_term_string}`
            },
            "query-input": "required name=search_term_string"
          }
        },
        {
          "@type": "Person",
          "@id": `${siteUrl}/#person`,
          "name": authorName,
          "givenName": "Renzo Germán",
          "familyName": "Ríos Abbate",
          "url": siteUrl,
          "image": siteImage,
          "email": authorEmail,
          "telephone": authorPhone,
          "jobTitle": "Desarrollador Full Stack",
          "description": "Desarrollador Full Stack especializado en React, Next.js, Django y aplicaciones móviles",
          "knowsAbout": [
            "Desarrollo Web",
            "React",
            "Next.js",
            "TypeScript",
            "JavaScript",
            "Node.js",
            "Django",
            "Python",
            "React Native",
            "Expo",
            "WordPress",
            "Tailwind CSS",
            "PostgreSQL",
            "Machine Learning",
            "Inteligencia Artificial"
          ],
          "alumniOf": {
            "@type": "CollegeOrUniversity",
            "name": "Duoc UC",
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Viña del Mar",
              "addressCountry": "CL"
            }
          },
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Viña del Mar",
            "addressRegion": "Valparaíso",
            "addressCountry": "CL"
          },
          "sameAs": [
            "https://github.com/rxzkie",
            "https://www.linkedin.com/in/renzo-german-rios-abbate-041a42262/",
            `https://wa.me/${authorPhone.replace('+', '')}`
          ]
        },
        {
          "@type": "ProfilePage",
          "@id": `${siteUrl}/#profilepage`,
          "url": siteUrl,
          "name": siteTitle,
          "isPartOf": {
            "@id": `${siteUrl}/#website`
          },
          "about": {
            "@id": `${siteUrl}/#person`
          },
          "mainEntity": {
            "@id": `${siteUrl}/#person`
          },
          "inLanguage": "es-CL"
        },
        {
          "@type": "ItemList",
          "name": "Servicios de Desarrollo",
          "itemListElement": [
            {
              "@type": "Service",
              "position": 1,
              "name": "Desarrollo de Aplicaciones Web",
              "description": "Creación de aplicaciones web modernas con React, Next.js, Django",
              "provider": { "@id": `${siteUrl}/#person` }
            },
            {
              "@type": "Service",
              "position": 2,
              "name": "Desarrollo de Apps Móviles",
              "description": "Aplicaciones móviles nativas e híbridas con React Native y Expo",
              "provider": { "@id": `${siteUrl}/#person` }
            },
            {
              "@type": "Service",
              "position": 3,
              "name": "Soluciones con Inteligencia Artificial",
              "description": "Integración de chatbots y análisis de datos con IA",
              "provider": { "@id": `${siteUrl}/#person` }
            }
          ]
        },
        {
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Inicio",
              "item": siteUrl
            },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Sobre Mí",
              "item": `${siteUrl}/#sobre-mi`
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "Proyectos",
              "item": `${siteUrl}/#proyectos`
            },
            {
              "@type": "ListItem",
              "position": 4,
              "name": "Contacto",
              "item": `${siteUrl}/#contacto`
            }
          ]
        }
      ]
    })} />

    
    <style>
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  
  <body class="bg-sky-50 dark:bg-gray-900 text-slate-700 dark:text-gray-200">
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    
    <Footer />
    
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script is:inline>
      window.addEventListener('load', function() {
        const isMobile = window.innerWidth < 768;
        const aosConfig = {
          duration: isMobile ? 600 : 800,
          easing: 'ease-in-out',
          once: true,
          offset: isMobile ? 50 : 100,
          disable: false,
          disableMutationObserver: false,
          debounceDelay: 50,
          throttleDelay: 99,
        };
        
        if (typeof AOS !== 'undefined') {
          AOS.init(aosConfig);
        } else {
          setTimeout(function() {
            if (typeof AOS !== 'undefined') {
              AOS.init(aosConfig);
            }
          }, 100);
        }
      });
    </script>
  </body>
</html>
