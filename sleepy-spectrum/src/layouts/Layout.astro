---
import Header from "../components/Header.astro";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <!-- Meta básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Título optimizado para SEO -->
    <title>Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web</title>
    <meta name="description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL para evitar contenido duplicado -->
    <link rel="canonical" href="https://miportafolio.com/" />

    <!-- Open Graph para redes sociales -->
    <meta property="og:title" content="Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web" />
    <meta property="og:description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />
    <meta property="og:image" content="https://miportafolio.com/imagen-portada.jpg" />
    <meta property="og:url" content="https://miportafolio.com/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web" />
    <meta name="twitter:description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />
    <meta name="twitter:image" content="https://miportafolio.com/imagen-portada.jpg" />

    <!-- Meta robots para indexación -->
    <meta name="robots" content="index, follow" />
    
    <!-- Generador Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- Mejora de Rendimiento -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Fuente optimizada para mejorar el tiempo de carga -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" />

    <!-- Datos Estructurados JSON-LD para SEO Avanzado -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Renzo Ríos",
      "url": "https://miportafolio.com/",
      "sameAs": [
        "https://github.com/rxzkie",
        "https://www.linkedin.com/in/renzo-german-rios-abbate-041a42262/"
      ],
      "jobTitle": "Desarrollador Full Stack",
      "worksFor": {
        "@type": "Organization",
        "name": "Freelance"
      }
    }
    </script>

    <!-- Breadcrumbs Datos Estructurados -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://miportafolio.com/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Proyectos",
        "item": "https://miportafolio.com/proyectos"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": "Contacto"
      }]
    }
    </script>

    <!-- Google Analytics -->
    <!-- Reemplaza 'TU_ID_ANALYTICS' con tu propio ID de Google Analytics -->
    <script lang="javascript" async src="https://www.googletagmanager.com/gtag/js?id=TU_ID_ANALYTICS"></script>
    <script lang="javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'TU_ID_ANALYTICS');
    </script>

    <!-- CSS Global -->
    <style>
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter', sans-serif;
        scroll-behavior: smooth; /* Scroll suave nativo */
      }
    </style>
  </head>
  
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-200">
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    
    <!-- Footer (Opcional) -->
    <footer class="bg-gray-200 dark:bg-gray-800 text-center p-4">
      <p>&copy; {new Date().getFullYear()} Renzo Ríos. Todos los derechos reservados.</p>
      <p>
        <a href="/privacy-policy" class="text-blue-500 hover:underline">Política de Privacidad</a> | 
        <a href="/terms-of-service" class="text-blue-500 hover:underline">Términos de Servicio</a>
      </p>
    </footer>
  </body>
</html>
