---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <!-- Meta básicos y otros tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web</title>
    <meta name="description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://miportafolio.com/" />

    <!-- Open Graph -->
    <meta property="og:title" content="Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web" />
    <meta property="og:description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />
    <meta property="og:image" content="https://miportafolio.com/imagen-portada.jpg" />
    <meta property="og:url" content="https://miportafolio.com/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Renzo Ríos | Desarrollador Full Stack & Creación de Páginas Web" />
    <meta name="twitter:description" content="Soy Renzo Ríos, un Desarrollador Full Stack especializado en la creación y venta de páginas web modernas y funcionales. Descubre mis proyectos y servicios." />
    <meta name="twitter:image" content="https://miportafolio.com/imagen-portada.jpg" />

    <!-- Meta robots -->
    <meta name="robots" content="index, follow" />

    <!-- Generador Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- Mejora de Rendimiento -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Fuente -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <!-- Datos Estructurados JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Renzo Ríos",
      "url": "https://miportafolio.com/",
      "sameAs": [
        "https://github.com/rxzkie",
        "https://www.linkedin.com/in/renzo-german-rios-abbate-041a42262/"
      ],
      "jobTitle": "Desarrollador Full Stack",
      "worksFor": {
        "@type": "Organization",
        "name": "Freelance"
      }
    }
    </script>

    <!-- Breadcrumbs Datos Estructurados -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://miportafolio.com/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Proyectos",
        "item": "https://miportafolio.com/proyectos"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": "Contacto"
      }]
    }
    </script>

    <!-- Google Analytics -->
    <script lang="javascript" async src="https://www.googletagmanager.com/gtag/js?id=TU_ID_ANALYTICS"></script>
    <script lang="javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'TU_ID_ANALYTICS');
    </script>

    
    <style>
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  
  <body class="bg-blue-50/50 dark:bg-gray-900 text-gray-900 dark:text-gray-200">
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    
    <Footer />
    
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script is:inline>
      window.addEventListener('load', function() {
        const isMobile = window.innerWidth < 768;
        const aosConfig = {
          duration: isMobile ? 600 : 800,
          easing: 'ease-in-out',
          once: true,
          offset: isMobile ? 50 : 100,
          disable: false,
          disableMutationObserver: false,
          debounceDelay: 50,
          throttleDelay: 99,
        };
        
        if (typeof AOS !== 'undefined') {
          AOS.init(aosConfig);
        } else {
          setTimeout(function() {
            if (typeof AOS !== 'undefined') {
              AOS.init(aosConfig);
            }
          }, 100);
        }
      });
    </script>
  </body>
</html>
