---
import Header from "../components/Header.astro";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <!-- Meta básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Título optimizado para SEO -->
    <title>Mi Portafolio | Desarrollador Full Stack</title>
    <meta name="description" content="Soy Renzo, un Desarrollador Full Stack especializado en tecnologías modernas. Explora mis proyectos y habilidades." />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL para evitar contenido duplicado -->
    <link rel="canonical" href="https://miportafolio.com/" />

    <!-- Open Graph para redes sociales -->
    <meta property="og:title" content="Mi Portafolio | Desarrollador Full Stack" />
    <meta property="og:description" content="Soy Renzo, un Desarrollador Full Stack especializado en tecnologías modernas. Explora mis proyectos y habilidades." />
    <meta property="og:image" content="https://miportafolio.com/imagen-portada.jpg" />
    <meta property="og:url" content="https://miportafolio.com/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Mi Portafolio | Desarrollador Full Stack" />
    <meta name="twitter:description" content="Soy Renzo, un Desarrollador Full Stack especializado en tecnologías modernas. Explora mis proyectos y habilidades." />
    <meta name="twitter:image" content="https://miportafolio.com/imagen-portada.jpg" />

    <!-- Meta robots para indexación -->
    <meta name="robots" content="index, follow" />
    
    <!-- Generador Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- Mejora de Rendimiento -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Fuente optimizada para mejorar el tiempo de carga -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" />

    <!-- Datos Estructurados JSON-LD para SEO Avanzado -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Renzo Rios",
      "url": "https://miportafolio.com/",
      "sameAs": [
        "https://github.com/rxzkie",
        "https://www.linkedin.com/in/renzo-german-rios-abbate-041a42262/"
      ],
      "jobTitle": "Desarrollador Full Stack",
      "worksFor": {
        "@type": "Organization",
        "name": "Freelance"
      }
    }
    </script>

    <!-- CSS Global -->
    <style>
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter', sans-serif;
        scroll-behavior: smooth; /* Scroll suave nativo */
      }
    </style>
  </head>
  
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-200">
    <Header />
    <main class="pt-16">
      <slot />
    </main>

    <!-- Script para scroll suave personalizado -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const scrollLinks = document.querySelectorAll(".scroll-link");

        scrollLinks.forEach(link => {
          link.addEventListener("click", function (e) {
            e.preventDefault();
            // Asegurarse de que el currentTarget es un elemento <a>
            if (!(e.currentTarget instanceof HTMLAnchorElement)) return;

            const href = e.currentTarget.getAttribute("href");
            if (!href) return;

            const targetId = href.substring(1);
            const targetElement = document.getElementById(targetId);

            if (targetElement) {
              const offset = 70; // Ajusta este valor para controlar cuánto baja
              const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
              const offsetPosition = elementPosition - offset;

              window.scrollTo({
                top: offsetPosition,
                behavior: "smooth"
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
